<h1>The tasks</h1>
<p><%= link_to "Create a task", tasks_new_path %></p>
<% @tasks.each do |task| %>
      <h2><%= link_to task.title, task_path(task) %></h2>
      <p><%= task.details %></p>
      <p><%= task.completed %></p>
      <%= link_to "Delete #{task.title}",
       task_path(task),
       method: :delete,
      data: { confirm: "Are you sure?" } %>
    <% end%>





